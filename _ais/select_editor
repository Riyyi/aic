#!/bin/bash

#DEFAULT EDITOR {{{
select_editor(){
    editors_list=("emacs" "nano" "vi" "vim" "zile");

    editor_list(){
        PS3="$prompt1"
        echo -e "Select editor\n"

        select EDITOR in "${editors_list[@]}"; do
            if contains_element "$EDITOR" "${editors_list[@]}"; then
                break
            else
                invalid_option
            fi
        done
    }

    print_title "DEFAULT EDITOR"

    OPTION=n
    while [[ $AUTOMATIC_MODE -ne 1 -a $OPTION != y ]]; do
        editor_list
        read_input_text "Confirm editor: $EDITOR"
    done
    
    package_install "$EDITOR"
}
#}}}
